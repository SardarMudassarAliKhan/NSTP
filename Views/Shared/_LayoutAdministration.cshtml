<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" id="TopNav">
        <div class="container-fluid" id="BreakingNewsNav">

            @Html.Partial("_BreakingNews")

        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("NSTP", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav" id="NavLinks">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    
    <div class="container-fluid body-content">
        <div class="row">
            <div class="col-sm-4">
                <div class="sidebar">
                    <ul class="nav navbar-nav" id="NavLinks">
                        <li>@Html.ActionLink("DASHBOARD", "DashBoard", "Administration")</li>
                        <li>@Html.ActionLink("NSTP NEWS", "Index", "NSTPNews")</li>
                        <li>@Html.ActionLink("NSTP TBN", "Index", "NSTPTopBreakingNews")</li>
                    </ul>
                </div>
            </div>
            <div class="col-sm-8">
                @RenderBody()
            </div>
        </div>
        <footer>
            <p>&copy; @DateTime.Now.Year - NSTP</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
